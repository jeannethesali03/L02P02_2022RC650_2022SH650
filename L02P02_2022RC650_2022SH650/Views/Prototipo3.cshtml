<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Comentarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <!-- Barra de progreso -->
        <div class="progress mb-4">
            <div class="progress-bar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">COMENTARIOS EXISTENTES</div>
        </div>

        <!-- Información del autor y libro -->
        <div class="row mb-3">
            <div class="col-md-6">
                <strong>Autor:</strong> <span>Nombre del Autor Seleccionado</span>
            </div>
            <div class="col-md-6">
                <strong>Libro:</strong> <span>Nombre del Libro Seleccionado</span>
            </div>
        </div>

        <!-- Sección de comentarios -->
        <div class="row">
            <!-- Comentarios existentes -->
            <div class="col-md-6">
                <h5 class="text-primary">Comentarios Existentes</h5>
                <div class="list-group">
                    <div class="list-group-item">
                        <strong>Comentario 1</strong><br>
                        <small>Usuario - Fecha</small>
                    </div>
                    <div class="list-group-item">
                        <strong>Comentario 2</strong><br>
                        <small>Usuario - Fecha</small>
                    </div>
                    <div class="list-group-item">
                        <strong>Comentario 3</strong><br>
                        <small>Usuario - Fecha</small>
                    </div>
                    <div class="list-group-item">
                        <strong>Comentario 4</strong><br>
                        <small>Usuario - Fecha</small>
                    </div>
                </div>
            </div>

            <!-- Agregar un comentario -->
            <div class="col-md-6">
                <h5 class="text-primary">Agregar un Comentario</h5>
                <form>
                    <div class="mb-3">
                        <label for="comentario" class="form-label">Comentario</label>
                        <textarea class="form-control" id="comentario" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-success w-100">Guardar Comentario</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>