@model List<autores>
@{
    ViewBag.Title = "Comentarios por Libros";
    Layout = "~/Views/Shared/LayoutPersonalizado.cshtml";
}

<link rel="stylesheet" href="~/css/style.css" />

<div class="container">
    <ul class="progressbar">
        <li class="active">AUTORES</li>
        <li>LIBROS</li>
        <li>COMENTARIOS EXISTENTES</li>
        <li>NUEVO COMENTARIO</li>
    </ul>

    <div class="card p-3">
        <h3 class="text-primary">Autor</h3>
        <table class="">
            <tbody>
                @foreach (var autor in Model)
                {
                    <tr class="d-flex justify-content-between my-3 ms-4">
                        <td style="font-weight: bold">@autor.autor</td>
                        <td style="font-weight: bold">
                            @Html.ActionLink("Seleccionar", "SeleccionarAutor", "Autores", new { id = autor.id }, new { @class = "btn btn-success" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
